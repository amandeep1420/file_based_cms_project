<ul>
  <% @files.each do |filename| %>
    <li>
      <a href="/<%= filename %>"><%= filename %></a>
      <a href="/<%= filename %>/edit">(click here to edit file)</a>
      <form class="inline" method="post" action="/<%= filename %>/delete">
        <button type="submit">Delete document</button>
      </form>
    </li>
  <% end %>
</ul>

<p><a href="/new">Click to create a new document</a><p>

<% if session[:username] %>
  <form method="post" action="/users/signout">
    <p class="user-status">
      Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
  <p class="user-status"><a href="/users/signin">Sign In</a></p>
<% end %>